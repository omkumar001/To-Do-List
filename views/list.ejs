<%- include("header"); -%>

    <div class="box" id="heading"> 
        <h1><%= listTitle %></h1>
    </div>
   
      
    <div class="box">
 
            <% for(var i=0;i<newAddedList.length;i++) { %> 
                <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" value="<%=newAddedList[i]._id %>" onchange="this.form.submit()" name="checkfield">
                    <p><%= newAddedList[i].name %></p>
                </div>
                <input type="hidden" name="listName" value=<%= listTitle %>></input>
            </form>
            <% } %> 

            <form class="item" action="/" method="post">
                <input type="text" name="newItem" placeholder="Add new To-Do-List Item" autocomplete="off"/>
                <button type="submit" name="list" value=<%= listTitle %>>+</button>
              </form>
    </div>

    <%- include("footer"); -%>
   
